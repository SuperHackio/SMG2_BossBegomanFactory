###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

###############################################################################
# Set the encoding to SHIFT-JIS
###############################################################################
*.arc=binary

*.h diff=cpp
*.hpp diff=cpp
*.c diff=cpp
*.cpp diff=cpp
*.h encoding=cp932
*.hpp encoding=cp932
*.c encoding=cp932
*.cpp encoding=cp932